{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["es6", "dom", "esnext"],
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    // `strict` enables noImplicitAny, noImplicitThis, alwaysStrict,
    // strictNullChecks and strictFunctionTypes at once
    "strict": true,
    "target": "es5",
    "pretty": true
  },
  "exclude": ["node_modules", "example", "**/*.test.ts"]
}
